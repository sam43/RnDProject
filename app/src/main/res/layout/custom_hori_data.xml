<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="5dp"
		android:layout_marginBottom="@dimen/padd_5"
		android:background="#ffffff"
		tools:ignore="HardcodedText, RelativeOverlap, ContentDescription">


	<RelativeLayout
			android:id="@+id/rl_main_cv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentStart="true"
			android:layout_alignParentTop="true"
			android:layout_marginStart="0dp"
			android:layout_marginTop="0dp">

		<androidx.cardview.widget.CardView
				android:id="@+id/cv_applicants"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:layout_centerHorizontal="true"
				android:layout_margin="5dp"
				android:animateLayoutChanges="true"
				app:cardCornerRadius="30dp"
				app:cardElevation="7dp">

			<RelativeLayout
					android:id="@+id/ll_item_details"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:background="@drawable/circle"
					android:padding="5dp">

				<TextView
						android:id="@+id/tv_university"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerInParent="true"
						android:text="0"
						android:textColor="#ffffff"
						android:textSize="14sp"
						android:textStyle="bold" />

			</RelativeLayout>

		</androidx.cardview.widget.CardView>

		<TextView
				android:id="@+id/value_TV"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@+id/cv_applicants"
				android:layout_centerInParent="true"
				android:layout_marginBottom="@dimen/padd_5"
				android:text="Item 1"
				android:textColor="@color/colorAccent"
				android:textSize="12sp" />

	</RelativeLayout>


	<ImageView
			android:id="@+id/iv_fast_for"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_marginStart="3dp"
			android:layout_marginTop="32dp"
			android:layout_toEndOf="@+id/rl_main_cv"
			android:src="@drawable/ic_fast_forward" />

</RelativeLayout>