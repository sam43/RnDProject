<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".ui.fragments.FragmentTwo">

    <Button
            android:id="@+id/btnPlacePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Pick Place"
            tools:ignore="HardcodedText"/>

    <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnPlacePicker"
            android:layout_marginStart="@dimen/padd_10"
            android:layout_marginEnd="@dimen/padd_10"
            android:gravity="center"
            android:text="@string/app_name"/>

    <com.looser43.rndproject.utils.TouchImageView
            android:id="@+id/ivMapView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/tvName"
            android:layout_margin="25dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:scaleType="centerCrop"
            android:src="@drawable/banner_placeholder"/>


</RelativeLayout>